@rendermode InteractiveServer
<article class="flex flex-column items-center w-[424px] @Class">
    <h3 class="mb-0 montserrat-semibold">Password Strength</h3>
    <img src="images/Divider-Medium.png" class="h-[8px] w-[185px] my-[30px]" alt="" srcset="">
    <div class="flex items-center mb-[40px]">
        @for(int i = 0; i < 5; i++)
        {
            <div class="h-[48px] w-[48px] bg-[#D9D9D9] rounded-[10px] mr-[15px] @((i < Strength) ? "!bg-[#476F95]" : "!bg-[#D9D9D9]")"></div>
        }
        <div class="bg-[#525E75] lora-semibold text-[30px] text-[#fff] text-center w-[110px] h-[44px] rounded-[5px] ml-[24px]">@status</div>
    </div>
    <div class="flex items-center flex-column">
        <div class="!mb-[22px] montserrat-semibold !bg-[#78938A] text-[30px] text-[#fff] text-center rounded-[5px] w-[76px] h-[44px]">Tips</div>
        <p class="hind-madurai-semibold text-[20px] text-center">Passwords should be 8 - 20 characters</p>
        <p class="hind-madurai-semibold text-[20px] text-center">Passwords should include letters, special characters & numbers</p>
        <p class="hind-madurai-semibold text-[20px] text-center">Passwords should not include ()*&^#$%~`/\||</p>
    </div>
</article>

@code {
    [Parameter]
    public string status { get; set; } = "Weak"; // Placeholder for password check status

    [Parameter]
    public string Class { get; set;} = ""; // Placeholder for password check status
    [Parameter]
    public int Strength { get; set;} = 0; // Placeholder for password check status

}