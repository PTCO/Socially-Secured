<article class="flex items-center flex-column  @Class">
    <div class="!mb-[22px] lora-semibold !bg-[#F52D2D] text-[30px] mx-[15px] px-[5px] text-[#fff] text-center rounded-[5px] w-[105px] h-[44px]">Errors</div>
    @foreach (var error in Errors)
    {
        <p class="hind-madurai-semibold text-[20px] text-center mb-[20px]">@(error)</p>
    }
    <div class="@(hasBtn ? "flex flex-column !items-center":"hidden")">
        <img src="images/Divider-Medium.png" class="h-[8px] w-[185px] my-[20px]" alt="" srcset="">
        <Button title="@btnTitle" isLink="false" href="" OnClickParamater="" Class="bg-[#D9D9D9] !w-[151px] !h-[60px] !rounded-[10px] !mt-[20px] !text-[25px] font-semibold hover:scale-[1.05] text-black" OnClick="@btnCallback" />
    </div>
</article>

@code {
    [Parameter]
    public string[] Errors { get; set; } = Array.Empty<string>();
    [Parameter]
    public string Class { get; set;} = ""; // Placeholder for password check status
    [Parameter]
    public string btnTitle { get; set;} = ""; // Placeholder for password check status
    [Parameter]
    public bool hasBtn { get; set;} = false; // Placeholder for password check status
    [Parameter]
    public EventCallback<string> btnCallback { get; set; } // Placeholder for password check status
}